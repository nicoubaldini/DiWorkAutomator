<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Resources\diwork_logo.ico</ApplicationIcon>
  </PropertyGroup>

	<ItemGroup>
		<Page Include="App.xaml">
			<CopyToOutputDirectory>Never</CopyToOutputDirectory>
		</Page>
	</ItemGroup>

  <ItemGroup>
    <None Remove="diwork_logo.png" />
    <None Remove="Resources\diwork_logo.png" />
  </ItemGroup>


  <ItemGroup>
    <Content Include="Resources\diwork_logo.ico" />
  </ItemGroup>



  <ItemGroup>
    <PackageReference Include="MaterialDesignThemes" Version="3.1.3" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\diwork_logo.png" />
  </ItemGroup>

  <ItemGroup>
    <None Update="app.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
